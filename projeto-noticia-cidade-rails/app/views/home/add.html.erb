<div class="container mt-5"> 

    <h2>Cadastrar uma notícia</h2>
    <hr />

    <div class="card">

        <div class="card-body">
            
            <%= form_with url: '/create', method: :post do |form| %>
            
                <div class="form-group">
                    <%= form.label :title, 'Titulo:' %>
                    <%= text_field_tag :title, '', class: 'form-control', 'autocomplete': 'off'%>
                </div>
 
                <div class="form-group">
                    <%= form.label :description, 'Descrição:' %>
                    <%= text_area_tag(:description, '', 'style': 'resize:none; outline:none', 
                    'class': 'form-control', 'rows': '3', 'autocomplete': 'off') %>

                </div>

                <%= form.submit 'Cadastrar', class: 'btn btn-primary' %>

            <% end %>
        
        </div>
      </div>

</div>